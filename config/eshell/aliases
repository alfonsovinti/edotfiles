alias clear clear 1
alias c clear 1
alias g grep -i
alias l ls -hF --color=auto --group-directories-first
alias ll ls -lahF --color=auto --group-directories-first
alias e $EDITOR
alias se sudo $EDITOR
alias ff find-file $1

alias .. cd ..
alias ... cd ../..
alias .3 cd ../../..
alias .4 cd ../../../..
alias .5 cd ../../../../..

alias xmrg xrdb -merge $HOME/.Xresources

alias cp cp -i $*
alias mv mv -i $*
alias rm rm -i $*

alias vim nvim
alias em emacs -nw
alias emacs emacsclient -c -a "emacs"

alias cat bat

alias gaddup git add -u
alias gaddall git add .
alias gbranch git branch
alias gcheckout git checkout
alias gclone git clone $*
alias gcommit git commit -m $1
alias gfetch git fetch
alias gpull git pull origin $1
alias gpush git push origin $1
alias gstatus git status
alias gtag git tag
alias gnewtag git tag -a
